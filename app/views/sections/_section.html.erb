<div id="<%= dom_id section %>" class="section clearfix">
<%= link_to fa_icon("trash"),"#", remote: true, method: :delete, class: "text-danger section-delete", data: {confirm: "Do you want to delete this section title: #{section.title}? Action is irreversible"}%>
<%= link_to fa_icon("pencil"), "#", remote: true, class: "section-edit" %> 
<%= link_to section.title, "#", class: "section-title", remote: true %>
</div>